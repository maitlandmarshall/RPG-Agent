{
  "$id": "https://agent-roleplay-engine/schemas/tactical_map.schema.json",
  "type": "object",
  "required": ["version", "map", "tokens"],
  "properties": {
    "version": { "type": "number", "minimum": 1 },
    "map": {
      "type": "object",
      "required": ["id", "background", "grid"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "background": { "type": "string", "minLength": 1 },
        "grid": {
          "type": "object",
          "required": ["cols", "rows", "cell_px"],
          "properties": {
            "cols": { "type": "number", "minimum": 1 },
            "rows": { "type": "number", "minimum": 1 },
            "cell_px": { "type": "number", "minimum": 1 }
          },
          "additionalProperties": true
        },
        "embed_images": { "type": "boolean" },
        "output_svg": { "type": "string" }
      },
      "additionalProperties": true
    },
    "tokens": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "image", "at"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "label": { "type": "string" },
          "image": { "type": "string", "minLength": 1 },
          "at": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "number" }
          },
          "size": { "type": "number", "minimum": 1 }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
